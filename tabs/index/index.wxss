.cutTab{
  display: flex;
  justify-content: space-around;
  margin:20rpx;
}
.tab{
  width:100%;
  text-align: center;
  border:1rpx solid #00af82;
  font-size:24rpx;
  height:45rpx;
  line-height: 45rpx;
  padding-left:21%;
}
.active{
  background:#00af82;
  color:#fff;
}