/* pages/Authentication/Authentication.wxss */

.fillIn{
  margin:0 20rpx;
}

.list{
  display: flex;
  justify-content:flex-start;
  line-height: 50rpx;
  /* border-bottom:1px solid #eee; */
}
.list text{
  width:25%;
}
input,textarea{
  width:70%;
  border:1px solid #ddd;
  padding-left:15rpx;
}
.img{
  display: flex;
  justify-content:space-between;
  width:70%;
}

.idcard{
  position: relative;
  width:180rpx;
  height:180rpx;
  border:1rpx solid #ddd;
}
.idcard image{
  
  width:100%;
  height: 100%;
}
.idcard text{
  display: inline-block;
  width:auto;
  position:absolute;
  top:39%;
  left: 28%;
  z-index: -1;
  color:#aaa;
}

button{
  height:60rpx;
  line-height: 60rpx;
  width:90%;
  margin-top:90rpx;
  font-size:24rpx;
}
