<!--pages/details/details.wxml-->
  <view class="mb80 detail">
    <view class="title" >
      {{content.title}}
    </view>

    <view class="details">
      <view class="left">
        <view class="clgray">
          <text decode='true' class="firstText">编&emsp;&emsp;号：</text>{{content.sequence}}
        </view>

      <swiper  autoplay='true' indicator-dots='true' interval="3000" duration="500" circular="true" indicator-active-color='#00af82' >
        <block wx:for="{{content.imgUrls}}" wx:key="banner" >
          <swiper-item>
              <image mode="aspectFill" data-src="{{item}}" src="{{item}}" width="100%" height="150"  bindtap='previewImg'></image> 
          </swiper-item>
        </block>
      </swiper>


        <view>
          <text decode='true' class="firstText clgray">姓&emsp;&emsp;名：</text>{{content.missName}}
        </view>
        <view>
          <text decode='true' class="firstText clgray">性&emsp;&emsp;别：</text>{{content.gender}}
        </view>
        <!-- <view>
          <text>籍贯：</text>{{content.missName}}
        </view> -->
        <view>
          <text class="firstText clgray">出生日期：</text><text>{{content.birthdate}}</text>
        </view>
        <view>
          <text class="firstText clgray">失踪日期：</text><text>{{content.missDate}}</text>
        </view>
        <view>
          <text  class="firstText clgray">失踪城市：</text><text>{{content.address.missProvinceName+'-'+content.address.missCountyName +'-'+content.address.missCityName}}</text>
        </view>
        <view>
          <text class="firstText clgray">详细地点：</text><text>{{content.missDetailPlace}}</text>
        </view>
      </view>

    </view>

      <view class="details-cont">
        <text class="clgray">相貌特征：</text><text>{{content.feature}}</text>
      </view>
      <view class="details-cont">
        <text class="clgray">失踪经过：</text><text>{{content.plot}}</text>
      </view>
      <view class="details-cont">
        <text class="clgray">失踪原因：</text><text>{{content.seekSubtype}}</text>
      </view>


  </view>

<!-- 评论回复内容 -->
 <view class="comment mb80" >
    <view class="Mtitle">线索信息:</view>
    <view  wx:for="{{comment}}" wx:key="comment">
      <view class="comment-list">
        <view class="nickname">
          {{item.customer.nickname}}:
        </view>
        <view class="content">
          <view>{{item.content}}</view>
          <view class="reply-btn" bindtap="coment" data-id="{{item.id}}">
            <image src="../../resource/img/reply2.png"></image>
            <text>回复</text>
          </view>
          <view wx:if="{{item.coment}}">
            <view class="repply" wx:for="{{item.coment}}" wx:key="repply">
              <view class="repply-list">
                <view class="nickname">{{item.customer.nickname}}:</view>
                <view >{{item.content}}</view>
                <view class="reply-btn" bindtap="reply" data-id="{{item.comentId}}">
                  <image src="../../resource/img/reply2.png"></image>
                  <text>回复</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
      
    </view>
  </view>




  <view class="Clue">
    <view wx:if="{{!collectioned}}" class="collection border" bindtap='collection'>
      <image src="../../resource/img/collection.png"></image>
      <text>收藏</text>
    </view>
    <view wx:else="{{!collectioned}}" class="collectioned border" bindtap='collectioned'>
      <image src="../../resource/img/collectioned.png"></image>
      <text>已收藏</text>
    </view>
    <view class="border" bindtap='apply'>
      <image src="../../resource/img/apply.png"></image>
      <text>提供信息</text>
    </view>
    <view bindtap='share'>
      <image src="../../resource/img/share.png"></image>
      <text sytle="line-height:70rpx;height:70rpx;display:inline-block">转发扩散</text>
    </view>
  </view>

 